<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--title-->
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#cd2626">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:background="#ffcd2626"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/title_city_manager"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:src="@drawable/title_city" />
            <ImageView
                android:id="@+id/city_seperator"
                android:layout_width="1.0dip"
                android:layout_height="40dip"
                android:layout_marginTop="2.0dip"
                android:layout_toRightOf="@id/title_city_manager"
                android:background="#A71717" />
            <TextView
                android:id="@+id/title_city_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/city_seperator"
                android:gravity="center_vertical"
                android:paddingLeft="5dip"
                android:text="北京天气"
                android:textColor="#ffffffff"
                android:textSize="22.0sp" />
            <ImageView
                android:id="@+id/title_update_btn"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:src="@drawable/title_update"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/title_share"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:layout_toLeftOf="@id/title_update_btn"
                android:src="@drawable/title_share" />
            <ImageView
                android:id="@+id/title_location"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:layout_toLeftOf="@id/title_share"
                android:src="@drawable/base_action_bar_action_city"
                />
        </RelativeLayout>

    </LinearLayout>
    <!--in-->
    <LinearLayout
        android:id="@+id/weather_today"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg"
        android:orientation="vertical">
        <!--date PM2.5-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="2">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/wind"
                    android:text="30/09/16"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                    android:textSize="24.0sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/pm2_5"
                    android:text="PM2.5"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                    android:textSize="24.0sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/pm_data"
                    android:text="220"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                    android:textSize="24.0sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/pm2_5_img"
                    android:src="@drawable/biz_plugin_weather_0_50"/>
            </LinearLayout>
        </LinearLayout>
        <!--time and tdegerr-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/city"
                    android:text="北京"
                    android:textColor="#ffffffff"
                    android:textSize="32.0sp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/time"
                    android:text="18:00更新"
                    android:textColor="#ffffffff"
                    android:textSize="28.0sp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/pm2_5_quality"
                    android:text="重度污染"
                    android:textColor="#ffffffff"
                    android:textSize="28.0sp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <!--dry wet weekday temperature-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight='1'
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/humidity"
                    android:text="湿度：57%"
                    android:textColor="#ffffffff"
                    android:textSize="24.0sp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/week_today"
                    android:text="Thursday"
                    android:textColor="#ffffffff"
                    android:textSize="24.0sp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/temperature"
                    android:text="2℃~5℃"
                    android:textColor="#ffffffff"
                    android:textSize="24.0sp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <!--pictures-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/timep"
                    android:text="实时温度：5℃"
                    android:textColor="#ffffffff"
                    android:textSize="24.0sp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/climate"
                    android:text="晴"
                    android:textColor="#ffffffff"
                    android:textSize="24.0sp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/weather_img"
                    android:src="@drawable/biz_plugin_weather_qing"
                    android:textColor="#ffffffff"
                    android:textSize="24.0sp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <!--6days-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/days6"
                android:text="点击查看未来6日天气"
                android:textColor="#ffffffff"
                android:textSize="32.0sp"
                android:gravity="center" />
        </LinearLayout>
        <!--else-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sport"
                    android:text="多运动"
                    android:textColor="#ffffffff"
                    android:textSize="18.0sp"
                    android:gravity="center" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
